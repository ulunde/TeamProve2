<form action="/user/create" method="POST" id="sign-up-form" class="form-signin">
    <h2 class="form-signin-heading">Create a new account</h2>

    <% if(flash && flash.err) { %>
    <ul class="alert alert-success">
        <% Object.keys(flash.err).forEach(function(error) { %>
        <li><%- JSON.stringify(flash.err[error]) %></li>
        <% }) %>
    </ul>
    <% } %>

    <div class="control-group">
        Name:
        <input type="text" class="form-control" placeholder="Joe Bloggs" name="name">
    </div>

    <div class="control-group">
        Age:
        <input type="text" class="form-control" placeholder="..and a half years old!" name="age">
    </div>

    <div class="control-group">
        Squad:
        <input type="text" class="form-control" placeholder="Please Select" name="title">
    </div>

    <div class="control-group">
        Telephone number:
        <input type="text" class="form-control" placeholder="555-0123.." name="phone">
    </div>

    <div class="control-group">
        Email Address:
        <input type="text" class="form-control" placeholder="joebloggs@teamprove.ie" name="email">
    </div>
        Password:
    <div class="control-group">
        <input type="password" class="form-control" placeholder="Password" name="password" id="password">
    </div>
        Confirm Password:
    <div class="control-group">
        <input type="password" class="form-control" placeholder="Confirm Password" name="confirmation">
        <br />
    </div>

    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Create Account"/>
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>